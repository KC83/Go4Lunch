<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_place">

    <!-- Name -->
    <TextView
        android:id="@+id/item_place_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/place_name"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/item_place_distance"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <!-- Address -->
    <TextView
        android:id="@+id/item_place_address"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/place_address"
        app:layout_constraintBottom_toTopOf="@+id/item_place_opening_hours"
        app:layout_constraintEnd_toStartOf="@+id/item_place_workmates"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_place_name" />
    <!-- Opening hours -->
    <TextView
        android:id="@+id/item_place_opening_hours"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/place_opening_hours"
        android:textStyle="italic"
        android:textColor="@color/colorAccentGray"
        app:layout_constraintBottom_toBottomOf="@+id/item_place_cardview"
        app:layout_constraintEnd_toStartOf="@+id/item_place_rating"
        app:layout_constraintStart_toStartOf="parent" />
    <!-- Distance -->
    <TextView
        android:id="@+id/item_place_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/place_distance"
        android:textColor="@android:color/darker_gray"
        android:paddingEnd="15dp"
        android:paddingStart="10dp"
        app:layout_constraintEnd_toStartOf="@id/item_place_cardview"
        app:layout_constraintBottom_toBottomOf="@id/item_place_name"
        app:layout_constraintTop_toTopOf="@id/item_place_name" />
    <!-- Image workmate -->
    <ImageView
        android:id="@+id/item_place_workmates"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/place_image_workmate"
        app:srcCompat="@drawable/ic_user"
        tools:ignore="VectorDrawableCompat"
        app:layout_constraintEnd_toStartOf="@id/item_place_number_workmates"
        app:layout_constraintBottom_toBottomOf="@id/item_place_number_workmates"
        app:layout_constraintTop_toTopOf="@id/item_place_number_workmates" />
    <!-- Number of workmates -->
    <TextView
        android:id="@+id/item_place_number_workmates"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/place_number_workmates"
        android:textStyle="bold"
        android:textColor="@color/colorAccentGray"
        android:paddingEnd="15dp"
        android:paddingStart="2dp"
        app:layout_constraintEnd_toStartOf="@id/item_place_cardview"
        app:layout_constraintBottom_toBottomOf="@id/item_place_address"
        app:layout_constraintTop_toTopOf="@id/item_place_address" />
    <!-- Rating -->
    <ImageView
        android:id="@+id/item_place_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/place_rating"
        android:paddingStart="10dp"
        android:paddingEnd="15dp"
        app:layout_constraintBottom_toBottomOf="@id/item_place_opening_hours"
        app:layout_constraintEnd_toStartOf="@id/item_place_cardview"
        app:layout_constraintTop_toTopOf="@id/item_place_opening_hours"
        tools:ignore="MissingConstraints,VectorDrawableCompat"
        tools:srcCompat="@drawable/rating_1" />
    <!-- Image -->

    <androidx.cardview.widget.CardView
        android:id="@+id/item_place_cardview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/item_place_image"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:contentDescription="@string/place_image"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="MissingConstraints,VectorDrawableCompat"
            tools:srcCompat="@tools:sample/backgrounds/scenic" />
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>